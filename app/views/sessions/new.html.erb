<h1>Sign In</h1>

<%= form_tag sessions_path do %>
  <div>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <p>Not a member? <%= link_to "Sign Up", new_user_path %></p>
  <%= submit_tag "Sign In" %>
<% end %>
