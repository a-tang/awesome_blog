<!DOCTYPE html>
<html>
<head>
  <title>AwesomeBlog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" <%= link_to "Blog Awesom", root_path %></a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><a <%= link_to "About", about_us_path %>>About</a></li>

      <li><a <%= link_to "Create Post", new_article_path %>>Create Post</a></li>
      <li><a <%= link_to "All Posts", articles_path %>>All Posts</a></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
      <li><a <%= link_to "Sign In", new_session_path %>><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
    </ul>
  </div>
</nav>

  <%= link_to "Home", root_path %>
  |
  <%= link_to "About", about_us_path %>
  |
  <% if user_signed_in? %>
  <%= link_to "Create Post", new_article_path %>
  |
  <%= link_to "All Posts", articles_path %>
  |
  Hello <%= current_user.first_name %>
    <%= link_to "Log out", sessions_path, method: :delete %>
  <% else %>
    <%= link_to "Sign In", new_session_path %>
    |
    <%= link_to "Sign Up", new_user_path %>
  <% end %>
<br>

<%= notice || alert %>

<%= yield %>

</body>
</html>
